    <ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView

                android:id="@+id/back_button"
                android:layout_width="37dp"
                android:layout_height="31dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_arrow_back" />



        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/pizza_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pizza_placeholder"
                    android:contentDescription="@string/pizza" />

                <ImageView
                    android:id="@+id/favorite_button"
                    android:layout_width="31dp"
                    android:layout_height="25dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/favorite"
                    android:src="@drawable/ic_star" />

            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                tools:ignore="UseCompoundDrawables">


                <TextView
                    android:id="@+id/restaurant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pizza_calzone_european"
                    android:textSize="16sp"
                    android:textColor="#666" />
            </LinearLayout>

            <TextView
                android:id="@+id/pizza_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pizza_calzone_european"
                android:textSize="24sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/pizza_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pizza_description"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/pizza_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rating"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:layout_marginEnd="16dp" />

                <ImageView
                    android:layout_width="47dp"
                    android:layout_height="53dp"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="@string/delivery"
                    android:src="@drawable/ic_delivery" />

                <TextView
                    android:id="@+id/delivery_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/free"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:layout_marginEnd="16dp" />

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="@string/delivery_time"
                    android:src="@drawable/ic_clock" />

                <TextView
                    android:id="@+id/delivery_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:textSize="14sp"
                    android:textColor="#000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/size"
                android:textSize="16sp"
                android:textColor="#000"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/button_size_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/size_10_inch"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:background="#e0e0e0"
                    android:layout_marginEnd="8dp"
                    android:minWidth="60dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/button_size_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/size_14_inch"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:background="#e0e0e0"
                    android:layout_marginEnd="8dp"
                    android:minWidth="60dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/button_size_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/size_16_inch"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:background="#e0e0e0"
                    android:minWidth="60dp"
                    style="?android:attr/buttonBarButtonStyle" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ingredients"
                android:textSize="16sp"
                android:textColor="#000"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="16dp"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_cheese"
                        android:contentDescription="@string/ingredient_cheese" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ingredient_cheese"
                            android:textSize="12sp"
                            android:textColor="#666" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="16dp"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_tomato"
                        android:contentDescription="@string/ingredient_tomato" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ingredient_tomato"
                            android:textSize="12sp"
                            android:textColor="#666" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="16dp"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_pepperoni"
                        android:contentDescription="@string/ingredient_pepperoni" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ingredient_pepperoni"
                            android:textSize="12sp"
                            android:textColor="#666" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="#f0f0f0">

            <TextView
                android:id="@+id/pizza_price"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/price_320_inr"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="16dp">

                <Button
                    android:id="@+id/button_quantity_decrease"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:background="#e0e0e0" />

                <TextView
                    android:id="@+id/text_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button_quantity_increase"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:background="#e0e0e0" />
            </LinearLayout>

            <Button
                android:id="@+id/button_add_to_cart"
                android:layout_width="95dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="#f44336"
                android:text="@string/add_to_cart"
                android:textColor="#DED6D9"
                android:textSize="16sp" />
        </LinearLayout>



    </LinearLayout>
</ScrollView>
